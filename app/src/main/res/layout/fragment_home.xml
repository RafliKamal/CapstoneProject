<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/navy"
        android:padding="16dp">

        <TextView
            android:id="@+id/greetingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hi, Bambang"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_account_circle"
            android:contentDescription="Profile Image"
            android:padding="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="November 2024"
        android:textSize="16sp"
        android:textColor="@color/navy"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/Revenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:columnCount="2"
            app:rowCount="2">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/navy_muda"
                 android:layout_marginEnd="11dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_column="0"
                    app:layout_row="0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Revenue"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvRevenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp00.000.000"
                        android:textColor="@android:color/white"
                        android:textSize="19sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/navy_muda"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_column="0"
                    app:layout_row="0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvExpenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp00.000.000"
                        android:textColor="@android:color/white"
                        android:textSize="19sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:columnCount="2"
        app:rowCount="2">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2d3e50"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardCornerRadius="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Margin"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp00.000.000"
                    android:textSize="19sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/navy_muda"
            app:cardCornerRadius="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Balance"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp00.000.000"
                    android:textSize="19sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.gridlayout.widget.GridLayout>



    <TextView
        android:id="@+id/detailLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Detail â†’"
        android:textSize="15sp"
        android:textColor="@color/navy"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/informasiLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:columnCount="1"
        app:rowCount="1">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/navy_muda"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="@string/lorem"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:padding="20dp"/>


        </com.google.android.material.card.MaterialCardView>
    </androidx.gridlayout.widget.GridLayout>


    <LinearLayout
        android:id="@+id/articlesSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Articles"
            android:textSize="18sp"
            android:textColor="@color/navy"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticles"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginHorizontal="12dp"
            android:paddingHorizontal="6dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_articles" />


    </LinearLayout>

</LinearLayout>
